---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content="ConCrochet - Tu tienda de amigurumis hechos a mano" />
    <meta name="keywords" content="amigurumi, crochet, tejido, muñecos, artesanía, hecho a mano" />
    <meta name="author" content="ConCrochet" />
    <link rel="canonical" href="https://concrochet.com" />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="{title}" />
    <meta property="og:description" content="ConCrochet - Tu tienda de amigurumis hechos a mano" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://concrochet.com" />
    <meta property="og:image" content="/favicon.svg" />
    
    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="{title}" />
    <meta name="twitter:description" content="ConCrochet - Tu tienda de amigurumis hechos a mano" />
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="font-sans bg-white">
    <div id="app" class="min-h-screen">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  @import "../styles/tailwind.css";
  
  body {
    font-family: 'Inter', system-ui, sans-serif;
  }
</style>
