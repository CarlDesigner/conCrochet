---
export interface Props {
  id: string;
  name: string;
  price: number;
  image: string;
  description: string;
  category: string;
  inStock: boolean;
}

const { id, name, price, image, description, category, inStock } = Astro.props;
---

<div class="col-lg-3 col-md-6 mb-4">
  <div class="card product-card h-100">
    <!-- Imagen del producto -->
    <img src={image} class="card-img-top" alt={name} loading="lazy">
    
    <!-- Badge de categoría -->
    <div class="position-absolute top-0 start-0 m-2">
      <span class="badge bg-secondary">{category}</span>
    </div>
    
    <!-- Badge de stock -->
    <div class="position-absolute top-0 end-0 m-2">
      {inStock ? 
        <span class="badge bg-success">En Stock</span> : 
        <span class="badge bg-danger">Agotado</span>
      }
    </div>

    <div class="card-body d-flex flex-column">
      <!-- Título del producto -->
      <h5 class="card-title">{name}</h5>
      
      <!-- Descripción -->
      <p class="card-text text-muted flex-grow-1">
        {description}
      </p>
      
      <!-- Precio -->
      <div class="d-flex justify-content-between align-items-center mb-3">
        <span class="h5 text-primary mb-0">${price.toFixed(2)}</span>
        <div class="text-warning">
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="far fa-star"></i>
          <small class="text-muted ms-1">(4.0)</small>
        </div>
      </div>
      
      <!-- Botones de acción -->
      <div class="d-grid gap-2">
        {inStock ? (
          <>
            <button class="btn btn-primary" data-product-id={id} onclick="addToCart(this.dataset.productId)">
              <i class="fas fa-shopping-cart me-2"></i>
              Agregar al Carrito
            </button>
            <button class="btn btn-outline-secondary" data-product-id={id} onclick="addToWishlist(this.dataset.productId)">
              <i class="fas fa-heart me-2"></i>
              Agregar a Favoritos
            </button>
          </>
        ) : (
          <button class="btn btn-secondary" disabled>
            <i class="fas fa-bell me-2"></i>
            Notificar cuando esté disponible
          </button>
        )}
      </div>
    </div>
  </div>
</div>

<script>
  function addToCart(productId: string) {
    // Aquí iría la lógica para agregar al carrito
    console.log('Agregando producto al carrito:', productId);
    
    // Mostrar notificación
    const toastElement = document.getElementById('cartToast');
    if (toastElement && window.bootstrap) {
      const toast = new window.bootstrap.Toast(toastElement);
      toast.show();
    }
  }

  function addToWishlist(productId: string) {
    // Aquí iría la lógica para agregar a favoritos
    console.log('Agregando producto a favoritos:', productId);
    
    // Mostrar notificación
    const toastElement = document.getElementById('wishlistToast');
    if (toastElement && window.bootstrap) {
      const toast = new window.bootstrap.Toast(toastElement);
      toast.show();
    }
  }
</script> 